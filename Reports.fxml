<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ReportsController"
            prefWidth="600.0" prefHeight="400.0">

    <!-- Title Label -->
    <Label text="Reports Menu" layoutX="230.0" layoutY="30.0"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- View Pay History Button -->
    <Button text="View Pay History" layoutX="200.0" layoutY="100.0"
            prefWidth="200.0"
            onAction="#handleViewPayHistory" />

    <!-- View Pay By Job Title Button -->
    <Button text="View Pay by Job Title" layoutX="200.0" layoutY="160.0"
            prefWidth="200.0"
            onAction="#handleViewPayByJobTitle" />

    <!-- View Pay By Division Button -->
    <Button text="View Pay by Division" layoutX="200.0" layoutY="220.0"
            prefWidth="200.0"
            onAction="#handleViewPayByDivision" />

    <!-- Back Button with fx:id -->
    <Button fx:id="backButton" text="Back" layoutX="10.0" layoutY="10.0"
            onAction="#handleBack" />

</AnchorPane>
